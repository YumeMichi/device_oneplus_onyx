<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <integer name="config_buttonBrightnessSettingDefault">0</integer>

    <!-- Hardware 'face' keys present on the device, stored as a bit field.
         This integer should equal the sum of the corresponding value for each
         of the following keys present:
             1 - Home
             2 - Back
             4 - Menu
             8 - Assistant (search)
            16 - App switch
            32 - Camera
         For example, a device with Home, Back and Menu keys would set this
         config to 7. -->
    <integer name="config_deviceHardwareKeys">19</integer>

    <!-- Whether device has physical tri state switch -->
    <bool name="config_hasAlertSlider">true</bool>

    <!-- Gestures' key codes. If the gesture is not supported set it to 0. -->
    <integer name="config_doubleTapKeyCode">249</integer>
    <integer name="config_drawVKeyCode">252</integer>
    <integer name="config_drawOKeyCode">250</integer>
    <integer name="config_twoFingerSwipeKeyCode">251</integer>
    <integer name="config_drawArrowLeftKeyCode">253</integer>
    <integer name="config_drawArrowRightKeyCode">254</integer>
    <integer name="config_drawInverseVKeyCode">255</integer>
    <integer name="config_oneFingerSwipeLeftKeyCode">259</integer>
    <integer name="config_oneFingerSwipeRightKeyCode">258</integer>
    <integer name="config_drawMKeyCode">257</integer>
    <integer name="config_drawWKeyCode">256</integer>
    <integer name="config_oneFingerSwipeUpKeyCode">261</integer>
    <integer name="config_oneFingerSwipeDownKeyCode">260</integer>

    <!-- Default settings for gestures
             0 - Disabled
             1 - Wake device
             2 - Toggle flashlight
             3 - Toggle airplane mode
             4 - Play/Pause music
             5 - Next music
             6 - Previous music
             7 - Open camera
             8 - Open dialer -->
    <integer name="config_doubleTapDefault">1</integer>
    <integer name="config_drawVDefault">2</integer>
    <integer name="config_drawODefault">7</integer>
    <integer name="config_drawArrowLeftDefault">6</integer>
    <integer name="config_drawArrowRightDefault">5</integer>
    <integer name="config_twoFingerSwipeDefault">4</integer>

    <!-- Whether to to intercept inputs on screen off. -->
    <bool name="config_enableKeyHandler">true</bool>

    <!-- Internal default to navigation bar value -->
    <bool name="config_defaultToNavigationBar">false</bool>
</resources>
